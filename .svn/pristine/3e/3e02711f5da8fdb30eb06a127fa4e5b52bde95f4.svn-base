div.orgChart div.node:hover { box-shadow:2px 2px 5px rgba(0, 0, 0, 0.5); }

.orgTree.orgChart > table tr td div.node { background-color:#2475d0!important; border-radius:200px; color:#fff;  font-size:1.8em; width:150px; height:150px; line-height:150px; vertical-align:middle; text-align:center; display:inline-block; }
.orgTree.orgChart > table tr td > table tr td > div.node { background-color:#fff!important; border-radius:0; color:#333; border:#3a4259 solid 1px; padding: 0.8em 1em; font-size: 1.2em; width:inherit; height:inherit; line-height:1.2; display:inline-block; }
.orgTree.orgChart > table tr td > table tr td > table tr td > div.node { background-color:#4f4f4f!important; color:#fff; border:#414141 solid 1px; padding: 0.7em 1em; font-size: 1.14em; display: block; }
.orgTree.orgChart > table tr td > table tr td > table tr td > table tr td > div.node  { background-color:#fff!important; color:#333; border:#afafaf solid 1px; padding: 0.6em 1em; font-size: 1.1em; }

.org-add-button,
.org-del-button,
.org-confirm-del-button {
  position: absolute;
  font-size: 12px;
}

.org-add-button {
  bottom: 3px;
  left: 5px;
  padding-left: 13px;
  background: url(./add.png) no-repeat 0 3px;
}

.org-add-button:hover,
.org-del-button:hover {
  background-color: #eef;
  border-radius: 2px;
  cursor: pointer;
}

.org-del-button {
  background: url(./delete.png) no-repeat;
  width: 12px;
  height: 12px;
  bottom: 7px;
  right: 5px;
}

.org-input { width: 90px; }

.org-confirm-del-button { display: none; }
