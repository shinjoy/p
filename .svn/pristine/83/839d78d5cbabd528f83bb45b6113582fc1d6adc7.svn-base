	function chkVacType(){
		var type = $("input[name='vacType']:checked").val();
		if(type == "HALF"){
			$('#dateFrom').datepicker("option", "maxDate", '');
			$('#dateTo').val($('#dateFrom').val());

			$("#halfTypeArea").show();
			$("#allTypeArea").hide();
		}else if(type = "ALL"){
			$('#dateTo').val($('#dateFrom').val());
			$('#dateTo').datepicker("option", "minDate", $('#dateFrom').val());

			$("#halfTypeArea").hide();
			$("#allTypeArea").show();
		}
	}

