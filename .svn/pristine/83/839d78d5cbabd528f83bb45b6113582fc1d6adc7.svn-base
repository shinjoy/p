	//저장
	function doSave(){

		var chk = true;


		var dateFrom = $("#dateFrom").val().split("-").join("");
		var dateTo = $("#dateTo").val().split("-").join("");
		if($("#dateFrom").val()==""){
			alert("출장 시작 날짜를 선택해 주세요.");
			$("#dateFrom").focus();
			return;
		}
		if($("#dateTo").val()==""){
			alert("출장 마지막 날짜를 선택해 주세요.");
			$("#dateTo").focus();
			return;
		}

		if(parseInt(dateFrom)>parseInt(dateTo)){
			alert("종료일이 시작일보다 이전인 출장일정은 만들 수 없습니다. ");
			return;
		}
		if($("#projectId").val() == ""){
			alert("${baseUserLoginInfo.projectTitle }를 선택해 주세요.");
			$("#projectId").focus();
			return;
		}

		if($("#activityId").val() == ""){
			alert("${baseUserLoginInfo.activityTitle }을/를 선택해 주세요.");
			$("#activityId").focus();
			return;
		}

		var dateToStr = $("#dateTo").val();
		var dateToBuf = dateToStr.split("-").join("");
		var dateToInt = parseInt(dateToBuf);

		var projectEndStr = $("#projectId option:selected").attr("lastDate");
		var projectEndBuf = projectEndStr.split("-").join("");
		var projectEndInt = parseInt(projectEndBuf);

		if(dateToInt > projectEndInt){
			alert("출장기간이 ${baseUserLoginInfo.projectTitle } 기간과 맞지 않습니다.\n기간을 다시 등록해주세요.\n[${baseUserLoginInfo.projectTitle } 기간: "+$("#projectId option:selected").attr("startDate")+" ~ "+$("#projectId option:selected").attr("lastDate")+"]");
			return;
		}


		if(($("#cpnId")=="" && $("#cstId")=="")&&$("#tripLoc").val() == ""){
			alert("출장지를 입력해 주세요.");
			return;
		}

		if($("#tripWhy").val() == ""){
			alert("출장목적을 입력해 주세요.");
			$("#tripWhy").focus();
			return;
		}

		if(Editor.getContent() == '<p><br></p>'){
			alert("출장내용을 입력해 주세요.");
			return;
		}
		if($("#beforeReqAmount").prop("checked")){
			$("#tripListTable input,#tripListTable select").each(function(){
				if($(this).val()==""){
					alert("출장비 산출내역을 입력해 주세요.");
					$(this).focus();
					chk = false;
					return false;
				}
			});
		}
		if(!chk)return;

		var confirmStr = "";

		var activityEndStr = $("#activityId option:selected").attr("enddate");
		var activityEndBuf = activityEndStr.split("-").join("");
		var activityEndInt = parseInt(activityEndBuf);

		if(dateToInt > activityEndInt){
			confirmStr = "등록한 출장일정이 ${baseUserLoginInfo.activityTitle }의 일정을 초과합니다. 저장하시겠습니까?";
		}

		if(confirmStr!=""){
			if(!confirm(confirmStr)){
				return;
			}
		}

		if($("#appvHeaderId").val() == ""){
			alert("결재 라인을 선택해 주세요.");
			$("#appvHeaderId").focus();
			return;
		}

		if($("#lineSize").val() == "0"){
			alert("결재선이 없으므로 품의서를 저장할수 없습니다. 담당자에게 문의해주세요.");
			return;
		}
		$(".number").each(function(){
			$(this).val($(this).val().split(",").join(""));
		});
		$("#frm").attr("action",contextRoot+"/approve/getChkAppointedPerson.do");
		commonAjaxSubmit("POST",$("#frm"),chkAppointedPersonCallback);

	}
