		var scheTypeTag = createSelectTag('tripType', comCodeTripType, 'CD', 'NM', '', null, colorObj, 100, 'select_b w100pro');   //'fnObj.clickRdBudget(this);');//radio tag creator 함수 호출 (common.js)
