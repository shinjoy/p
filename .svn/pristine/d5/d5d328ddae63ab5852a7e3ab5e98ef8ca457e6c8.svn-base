//2016.09.07 이인희 일정보기 Ajax 콜백
function scheduleCallback(result){
    $("#listArea").empty();
    $("#listArea").html(result);
    if(isMoveCalendar){
        setProject();
        setActivity();
        isMoveCalendar = false;
    }
}

