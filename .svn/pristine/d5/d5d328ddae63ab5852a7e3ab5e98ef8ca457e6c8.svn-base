var isMoveCalendar = false;
// 달력이동
function moveCalendar(per) {
    var SelYear =  parseInt($('#SelYear').val());
    var SelMonth =  parseInt($('#SelMonth').val())+per;
    if(SelMonth == 13){
        SelMonth=1;
        SelYear = SelYear + 1;
    }else if(SelMonth == 0){
        SelMonth=12;
        SelYear = SelYear - 1;
    }

    $("#Year").val(SelYear);
    $("#Month").val(SelMonth);

    $('#SelYear').val(SelYear);
    $('#SelMonth').val(SelMonth);

    /* setProject();
    setActivity(); */
    isMoveCalendar = true;

    //일정보기 ajax 호출
    fnObj.doSearch();
}

//TODAY 버튼 클릭시
function moveToday() {
    var nowYear =  parseInt($('#nowYear').val());
    var nowMonth =  parseInt($('#nowMonth').val());

    $("#Year").val(nowYear);
    $("#Month").val(nowMonth);

    $('#SelYear').val(nowYear);
    $('#SelMonth').val(nowMonth);

    isMoveCalendar = true;

    //일정보기 ajax 호출
    fnObj.doSearch();
}



